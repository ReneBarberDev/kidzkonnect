@model kidzkonnect2._0.Models.LoginViewModel

<!-- Définition de la page -->
@{
	ViewData["Title"] = "SignInUp";
}
<!-- Styles CSS -->
<style>
	/* Styles pour masquer les icônes de la barre de navigation sur la page spécifique */
	.page-specific .nav-item {
		display: none;
	}

	/* Masquer le formulaire de recherche sur la page Signinup */
	.page-specific .input-container {
		display: none;
	}

	/* Style du formulaire */
	.sign-form {
		max-width: 300px;
		background: #F8F9FD;
		background: linear-gradient(0deg, rgb(255, 255, 255) 0%, rgb(244, 247, 251) 100%);
		border-radius: 40px;
		padding: 20px 30px;
		border: 5px solid rgb(255, 255, 255);
		box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 30px 30px -20px;
		margin: auto;
	}

	/* Titre du formulaire */
	.heading {
		text-align: center;
		font-weight: 900;
		font-size: 25px;
		color: #00B0F0;
	}

	/* Styles pour les champs du formulaire */
	.form .input {
		width: 100%;
		background: white;
		border: none;
		padding: 5px 20px;
		border-radius: 20px;
		margin-top: 15px;
		box-shadow: #cff0ff 0px 10px 10px -5px;
		border-inline: 2px solid transparent;
	}

	/* Styles pour "Mot de passe oublié" */
	.form .forgot-password {
		display: block;
		margin-top: 10px;
		margin-left: 10px;
	}

		/* Styles pour les liens "Mot de passe oublié" */
		.form .forgot-password a {
			font-size: 11px;
			color: #00B0F0;
			text-decoration: none;
		}

	/* Styles pour le bouton de connexion */
	.form .login-button {
		display: block;
		width: 100%;
		font-weight: bold;
		background: #00B0F0;
		color: white;
		padding-block: 5px;
		margin: 20px auto;
		border-radius: 20px;
		box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 20px 10px -15px;
		border: none;
		transition: all 0.2s ease-in-out;
	}

		.form .login-button:hover {
			transform: scale(1.03);
			box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 23px 10px -20px;
		}

		.form .login-button:active {
			transform: scale(0.95);
			box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 15px 10px -10px;
		}

	/* Styles pour les boutons des réseaux sociaux */
	.social-account-container {
		margin-top: 25px;
	}

		.social-account-container .connection {
			display: block;
			text-align: center;
			font-size: 10px;
			color: rgb(170, 170, 170);
		}

		.social-account-container .social-accounts {
			width: 100%;
			display: flex;
			justify-content: center;
			gap: 15px;
			margin-top: 5px;
		}

			.social-account-container .social-accounts .social-button {
				background: #00B0F0;
				border: 1px solid #00B0F0;
				padding: 5px;
				border-radius: 50%;
				width: 40px;
				aspect-ratio: 1;
				display: grid;
				place-content: center;
				box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 12px 10px -8px;
				transition: all 0.2s ease-in-out;
			}

				.social-account-container .social-accounts .social-button .svg {
					fill: white;
					margin: auto;
				}

				.social-account-container .social-accounts .social-button:hover {
					transform: scale(1.1);
				}

				.social-account-container .social-accounts .social-button:active {
					transform: scale(0.9);
				}

	/* Styles pour les liens d'accord utilisateur */
	.agreement {
		display: block;
		text-align: center;
		margin-top: 15px;
	}

		.agreement a {
			text-decoration: none;
			color: #00B0F0;
			font-size: 9px;
		}

	/* Styles pour la section principale */
	.wrapper {
		--input-focus: #00B0F0;
		--font-color: #323232;
		--font-color-sub: #666;
		--bg-color: #fff;
		--bg-color-alt: #666;
		--main-color: #323232;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	/* Styles pour la carte de commutation */
	.switch {
		transform: translateY(-200px);
		position: relative;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 30px;
		width: 50px;
		height: 20px;
	}

	.card-side::before {
		position: absolute;
		content: 'Sign In';
		left: -70px;
		top: 0;
		width: 100px;
		text-decoration: underline;
		color: #00B0F0;
		font-weight: 600;
	}

	.card-side::after {
		position: absolute;
		content: 'Sign Up';
		left: 70px;
		top: 0;
		width: 100px;
		text-decoration: none;
		color: #00B0F0;
		font-weight: 600;
	}

	/* Styles pour le commutateur */
	.toggle {
		opacity: 0;
		width: 0;
		height: 0;
	}

	/* Styles pour le slider du commutateur */
	.slider {
		box-sizing: border-box;
		border-radius: 10px;
		border: 1px solid #00B0F0;
		box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 12px 10px -8px;
		position: absolute;
		cursor: pointer;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: rgb(244, 247, 251);
		transition: 0.3s;
	}


		.slider:before {
			box-sizing: border-box;
			position: absolute;
			content: "";
			height: 20px;
			width: 20px;
			border: 1px solid #00B0F0;
			box-shadow: #00B0F0 1px 2px 1px 0px;
			border-radius: 10px;
			left: -1px;
			bottom: 1px;
			background-color: #fff;
			transition: 0.3s;
		}

	/* Styles pour le slider lorsque le commutateur est coché */
	.toggle:checked + .slider {
		background-color: var(--input-focus);
	}

		.toggle:checked + .slider:before {
			transform: translateX(30px);
		}

	.toggle:checked ~ .card-side:before {
		text-decoration: none;
	}

	.toggle:checked ~ .card-side:after {
		text-decoration: underline;
	}

	/* Styles pour la carte */
	.flip-card__inner {
		width: 300px;
		height: 350px;
		position: relative;
		background-color: transparent;
		perspective: 1000px;
		text-align: center;
		transition: transform 0.8s;
		transform-style: preserve-3d;
	}

	.toggle:checked ~ .flip-card__inner {
		transform: rotateY(180deg);
	}


	.flip-card__front, .flip-card__back {
		position: absolute;
		display: flex;
		flex-direction: column;
		justify-content: center;
		-webkit-backface-visibility: hidden;
		backface-visibility: hidden;
	}

	/* Styles pour la carte lorsqu'elle est retournée */
	.flip-card__back {
		width: 100%;
		transform: rotateY(180deg);
	}
</style>

