	<script>
		$(document).ready(function () {
			$('#search-input').on('input', function () {
				var query = $(this).val();
				if (query.length >= 2) { // Trigger the search for at least 2 characters
					$.ajax({
						method: 'GET',
						url: '@Url.Action("SearchResults", "Recherche")', // Update to the correct URL if needed
						data: { query: query },
						success: function (data) {
							$('#search-results-dropdown').html(data).fadeIn();
						},
						error: function (xhr, status, error) {
							// Handle errors here
							console.error("Error occurred: " + error);
						}
					});
				} else {
					$('#search-results-dropdown').fadeOut();
				}
			});

			// Hide search results when clicking outside the search bar
			$(document).click(function (e) {
				if (!$(e.target).closest('#search-input').length) {
					$('#search-results-dropdown').fadeOut();
				}
			});
		});
	</script>
